# move between windows
cmd - up        : yabai -m window --focus stack.prev ||  yabai -m window --focus north || yabai -m window --focus stack.last || yabai -m display --focus north
cmd - down      : yabai -m window --focus stack.next || yabai -m window --focus south || yabai -m window --focus stack.first || yabai -m display --focus south
cmd - left      : yabai -m window --focus west || yabai -m display --focus west
cmd - right     : yabai -m window --focus east || yabai -m display --focus east

# swap windows
shift + cmd - left      : yabai -m window --swap west || (yabai -m window --display west && yabai -m display --focus west)
shift + cmd - right     : yabai -m window --swap east || (yabai -m window --display east && yabai -m display --focus east)
shift + cmd - up        : yabai -m window --swap north || (yabai -m window --display north && yabai -m display --focus north)
shift + cmd - down      : yabai -m window --swap south || (yabai -m window --display south && yabai -m display --focus south)

# warp windows
alt + cmd - left        : ~/.scripts/yabai-stack west
alt + cmd - right       : ~/.scripts/yabai-stack east 
alt + cmd - up          : ~/.scripts/yabai-stack north
alt + cmd - down        : ~/.scripts/yabai-stack south

# resize windows
ctrl + cmd - left       : yabai -m window west --resize right:-20:0 2> /dev/null || yabai -m window --resize right:-20:0
ctrl + cmd - right      : yabai -m window east --resize left:20:0 2> /dev/null || yabai -m window --resize left:20:0
ctrl + cmd - up         : yabai -m window south --resize top:0:-20 2> /dev/null || yabai -m window --resize top:0:-20
ctrl + cmd - down       : yabai -m window north --resize bottom:0:20 2> /dev/null || yabai -m window --resize bottom:0:20

# open terminal
alt + cmd - return      : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~

# toggle float
cmd - backspace         : yabai -m window --toggle float; \
                          yabai -m window --grid 6:6:1:1:4:4

# toggle stack
shift + cmd - backspace : yabai -m space --layout "$(yabai -m query --spaces --space | jq -r 'if .type == "bsp" then "stack" else "bsp" end')"

