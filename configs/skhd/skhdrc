# focus
cmd - 1                 : yabai -m space --focus 1
cmd - 2                 : yabai -m space --focus 2
cmd - 3                 : yabai -m space --focus 3
cmd - 4                 : yabai -m space --focus 4
#cmd + shift - 1         : yabai -m window --space 1 && yabai -m space --focus 1
#cmd + shift - 2         : yabai -m window --space 2 && yabai -m space --focus 2
#cmd + shift - 3         : yabai -m window --space 3 && yabai -m space --focus 3
#cmd + shift - 4         : yabai -m window --space 4 && yabai -m space --focus 4
cmd - up                : ~/.scripts/yabai-helper focus-window north
cmd - down              : ~/.scripts/yabai-helper focus-window south
cmd - left              : ~/.scripts/yabai-helper focus-window west
cmd - right             : ~/.scripts/yabai-helper focus-window east
cmd - pageup            : ~/.scripts/yabai-helper focus-window stack.prev
cmd - pagedown          : ~/.scripts/yabai-helper focus-window stack.next
fn + cmd - up           : ~/.scripts/yabai-helper focus-window stack.prev
fn + cmd - down         : ~/.scripts/yabai-helper focus-window stack.next

# move
alt + cmd - up          : ~/.scripts/yabai-helper stack-window north
alt + cmd - down        : ~/.scripts/yabai-helper stack-window south
alt + cmd - left        : ~/.scripts/yabai-helper stack-window west
alt + cmd - right       : ~/.scripts/yabai-helper stack-window east
shift + cmd - up        : ~/.scripts/yabai-helper move-window north 
shift + cmd - down      : ~/.scripts/yabai-helper move-window south
shift + cmd - left      : ~/.scripts/yabai-helper move-window west
shift + cmd - right     : ~/.scripts/yabai-helper move-window east

# resize windows
lctrl + cmd - left      : yabai -m window --resize left:-50:0; \
                          yabai -m window --resize right:-50:0
lctrl + cmd - down      : yabai -m window --resize bottom:0:50; \
                          yabai -m window --resize top:0:50
lctrl + cmd - up        : yabai -m window --resize top:0:-50; \
                          yabai -m window --resize bottom:0:-50
lctrl + cmd - right     : yabai -m window --resize right:50:0; \
                          yabai -m window --resize left:50:0

# open terminal
shift + cmd - return            : osascript -e 'tell app "iTerm2" to create window with default profile'
alt + shift + cmd - return      : yabai -m window --insert stack; osascript -e 'tell app "iTerm2" to create window with default profile'

# toggle float
shift + cmd - space             : yabai -m window --toggle float; \
                                    yabai -m window --grid 6:6:1:1:4:4

# toggle managed
cmd + alt + shift - space       : ~/.scripts/yabai-helper toggle-layout

# toggle fullscreen
cmd + alt + shift - f           : yabai -m window --toggle zoom-fullscreen

# toggle topmost
cmd + alt + shift - t           : yabai -m window --toggle topmost
